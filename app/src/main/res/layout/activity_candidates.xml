<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/white"
        android:orientation="horizontal"
        android:id="@+id/upper_manu"
        android:padding="10dp">

        <TextView
            android:id="@+id/tv_logout_candidate"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:clickable="true"
            android:focusable="true"
            android:gravity="start"
            android:padding="15dp"
            android:text="@string/logout"
            android:textColor="@color/green"
            android:textSize="18sp"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/tv_candidate_profile"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:clickable="true"
            android:focusable="true"
            android:gravity="end"
            android:padding="15dp"
            android:text="@string/profile"
            android:textColor="@color/green"
            android:textSize="18sp"
            android:textStyle="bold" />

    </LinearLayout>


    <ListView
        android:id="@+id/list_view_Candidates"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_below="@id/upper_manu"
        android:layout_above="@id/bt_view_result"
        android:background="@color/white"
        android:scrollbars="vertical" />

    <TextView
        android:id="@+id/bt_view_result"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="1dp"
        android:gravity="center"
        android:clickable="true"
        android:focusable="true"
        android:background="@drawable/rounded_button"
        android:padding="10dp"
        android:text="@string/view_results"
        android:textColor="#2DA92D"
        android:textSize="20sp"
        android:textStyle="bold" />

</RelativeLayout>
