<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:background="@color/white"
    android:padding="16dp">


    <TextView
        android:id="@+id/btn_back_update_candidate"
        android:layout_width="40dp"
        android:layout_height="wrap_content"
        android:drawableLeft="@drawable/back_button"
        android:textColor="@color/white"
        android:backgroundTint="@color/black"
        android:layout_alignParentTop="true"
        android:clickable="true"
        android:focusable="true"
        android:layout_margin="1dp"
        android:layout_alignParentStart="true"
        />
    <!-- Header TextView -->
    <TextView
        android:id="@+id/text_view_header"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Update Candidate"
        android:textAllCaps="true"
        android:textSize="25sp"
        android:textColor="@color/black"
        android:textStyle="bold"
        android:gravity="center"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="16dp"
        android:layout_marginTop="20dp"
        android:layout_alignParentTop="true" />

    <!-- Candidate ID EditText -->
    <EditText
        android:id="@+id/et_update_id"
        android:layout_width="match_parent"
        android:layout_height="60dp"
        android:background="@android:drawable/editbox_background"
        android:hint="Candidate ID"
        android:inputType="number"
        android:textColor="@color/black"
        android:textColorHint="#4D4848"
        android:layout_below="@id/text_view_header"
        android:layout_marginTop="20dp"
        />

    <!-- Candidate Name EditText -->
    <EditText
        android:id="@+id/et_update_name"
        android:layout_width="match_parent"
        android:layout_height="60dp"
        android:background="@android:drawable/editbox_background"
        android:hint="Candidate Name"
        android:textColor="@color/black"
        android:textColorHint="#4D4848"
        android:inputType="text"
        android:layout_below="@id/et_update_id"
        android:layout_marginTop="16dp"
        />

    <!-- ImageView for Candidate Image -->
    <ImageView
        android:id="@+id/image"
        android:layout_width="match_parent"
        android:layout_height="167dp"
        android:layout_marginBottom="16dp"
        android:clickable="true"
        android:focusable="true"
        android:scaleType="fitCenter"
        app:srcCompat="@drawable/upload_image"
        android:layout_below="@id/et_update_name"
        android:layout_marginTop="16dp" />

    <!-- Select Image Button -->
    <Button
        android:id="@+id/bt_select_image"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Select Image"
        android:textColor="@color/white"
        android:backgroundTint="@color/black"
        android:layout_below="@id/image"
        android:layout_marginTop="16dp"
        />
    <!-- Search Button -->
    <Button
        android:id="@+id/bt_search"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Search"
        android:textColor="@color/white"
        android:backgroundTint="#328935"
        android:layout_below="@id/bt_select_image"
        android:layout_marginTop="16dp"
        />

    <!-- Update Button -->
    <Button
        android:id="@+id/bt_insert_update"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Update"
        android:textColor="@color/white"
        android:backgroundTint="#3D8A28"
        android:layout_below="@id/bt_search"
        android:layout_marginTop="16dp"
        />

</RelativeLayout>
